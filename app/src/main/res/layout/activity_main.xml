<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/appColorDarkGrey">

    <TextView
        android:id="@+id/age_texts"
        android:layout_width="wrap_content"
        android:textSize="@dimen/dimen_45sp"
        android:textColor="@color/appColorDarkRed"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:text="@string/first_age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resurrection_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/resurrection_counter"
        app:layout_constraintTop_toTopOf="@+id/age_texts"
        android:textColor="@color/appColorOrange"
        android:textSize="@dimen/dimen_20sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        android:text="@string/resurrection_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/resurrection_counter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/resurrection_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/age_texts"
        android:textColor="@color/appColorOrange"
        android:textSize="@dimen/dimen_20sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>